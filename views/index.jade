h1 #{title} demo

header Organizations

form(action='/organization/new', method='post')
	input(type='text', name='title', placeholder='organization')
	input(type='text', name='name', placeholder='contact')
	input(type='submit', value='add')

#organizations
	- for o in orgs
		div= o.title
			- if (o.contacts.length)
				a(href="/contact/#{o.contacts[0]._id}") #{o.contacts[0].name_full}
			a(href="/organization/#{o._id}/delete") remove
